#homebrew
eval "$(/opt/homebrew/bin/brew shellenv)"

#pure prompt
fpath+=("$(brew --prefix)/share/zsh/site-functions")

autoload -U promptinit; promptinit
prompt pure

source $PWD/.dotfiles/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

#aliases
alias zshconfig="vim ~/.dotfiles/.zshrc_personal"
alias aliases="vim ~/.dotfiles/.aliases"
alias ls="ls -a"
